<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginStart="150dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ActorCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:background="#FBFBFB"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:scaleX="1.5" />

        <TextView
            android:id="@+id/ActorCategoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ActorCategoryImage"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalActorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ActorCategoryTextView"
            android:layout_marginStart="125dp"
            android:layout_marginTop="11dp"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="Total Actors"
            android:textAlignment="center"
            android:textColor="#4A628A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TotalActors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ActorCategoryTextView"
            android:layout_marginStart="225dp"
            android:layout_marginTop="11dp"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:textColor="#141212"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TotalActors"
            android:layout_marginStart="260dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingBottom="7dp"
            android:text="View More >>"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
